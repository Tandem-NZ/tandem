<div class="container u-cf">
    <!-- wrapper -->
    <h3>Update your profile</h3>
    <h5>enter your details</h5>
        <form action="/profile" method="post">
          <p>How long have you had your drivers licence?: </p>
          <input class="profile-input" id="profile-licence" autofocus=""
          name='driverLicenceDuration' placeholder="enter years">
          <p>Please enter your age: </p>
          <input class="profile-input" id="profile-age" autofocus="" name='age' placeholder=
          "enter years">
          <p>Enter your gender: </p>
          <input class="profile-input" id="gender" autofocus="" name='gender' placeholder=
          "gender" type="gender">
          <p>Tell us a little about yourself:</p>
          <textarea cols="40" id="create-listing-textbox" name='aboutMe'
          placeholder="tell us about yourself" rows="8"></textarea>
          <div>
            <input id='updateProfile' type='submit' value='submit'><br>
          </div>
        </form>
    </div>
