<div class="create-listings-container u-full-width">
  <div class="search-bar center-content">
    <form class="search u-full-width" id="locations" name="searchForm"
    onsubmit="return validateForm()">
      <input class="inputFullWidth" id="origin" name="origin" placeholder=
      "origin" type="text"><input class="inputFullWidth" id="destination"
      name="destination" placeholder="destination" type="text"> <button id=
      "searchButton" name="searchButton">Find</button>
      <p id="alert"></p>
    </form>
  </div>
  <div class="container u-cf">

    <h3>Listing confirmed!</h3>
    <br>
    <h5></h5>

    <div class="singleListing" id="listing" data-listingId="{{data.listingID}}">
    <div class="row">
      <div class="twelve columns" style='text-align:left'>
      </div>

      <div class="nine columns" >
        <h4>{{data.origin}} <i aria-hidden="true" class="fa fa-long-arrow-right"></i> <span class="destination">{{data.destination}}</span></h4>
        <p><span class="bold-text">Date:</span> {{data.departureDate}}</p>
        <p><span class="bold-text">Time:</span> {{data.departureTime}}</p>
        <p><span class="bold-text">Description:</span> {{data.description}}</p>
        <input type='hidden' id={{data.listingID}}
      </div>
    </div>
    <br>
    <br>
    <br>
    <button><a href="/">Return to homepage</a></button>
    </div>
