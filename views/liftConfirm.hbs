<header>
  <div id="logo">
    <a href="/">tandem.</a>
  </div>
  <nav class="primary-nav">
    <ul>
      <li class="active">
        <a href="/howItWorks">How it works</a>
      </li>
      <li class="active">
        <a href="/createListing">Create a Listing</a>
      </li>
      <li>
        <a href="/profile">Update your profile</a>
      </li>
      <li>
        <a href="/signin">Sign in</a>
      </li>
      <li>
        <a href="/signup" id="signup-btn-nav">Sign up</a>
      </li>
    </ul><!-- phone nav button -->
    <button class="nav-button">toggle menu</button>
  </nav>
</header><!-- end of header -->
<div class="create-listings-container u-full-width">
  <div class="search-bar center-content">
    <form class="search u-full-width" id="locations" name="searchForm"
    onsubmit="return validateForm()">
      <input class="inputFullWidth" id="origin" name="origin" placeholder=
      "origin" type="text"><input class=
      "inputFullWidth" id="destination" name="destination" placeholder=
      "destination" type="text"> <button id="searchButton" name=
      "searchButton">Find</button>
      <p id="alert"></p>
    </form>
  </div>
  <div class="container u-cf"> <!-- wrapper -->
  <h3>You've confirmed your trip</h3>
  <h5>..pack your bags its time to ride with Tandem</h5>
		<div id="liftInfo">
			{{#each data}}
		<ul>
			<li>Origin: {{this.origin}}</li>
			<li>Destination: {{this.destination}}</li>
			<li>Drivers Name: {{this.name}}</li>
			<li>Drivers email {{this.email}}</li>
			<li>Date of Departure:{{this.departureDate}}</li>
			<li>Time of Departure:{{this.departureTime}}</li>

			<hidden id="listingID">{{this.listingID}}</hidden>
		</ul>
		{{/each}}
		<p>Message to driver (optional): </p>
		<input type="text" id="description" name="description">
		</div><br>
		<button id="liftEnjoyButton" class="rideConfirm">Confirm Your Ride</button>




    <h3>Find a passenger to travel with</h3>
    <h5>Create a Listing below</h5>
    <div>
      <form action="/createListing" method="post">
        <input autofocus="" name='origin' placeholder="origin" type=
        'text'>
        <input name='destination' placeholder="destination" type=
        'text'>
        <p>When are you leaving?</p>
        Date: <input name='departureDate' placeholder="departure date" type=
        "date"><br>
        Time: <input name='departureTime' placeholder="departure time" type=
        "time"><br>
        Description: <br>
        <textarea name='description' cols="40" id="create-listing-textbox" rows="8" placeholder="description"></textarea>
        <div>
          <input id="create-submit" type='submit' value='submit'><br>
        </div>
      </form>
    </div>
  </div> <!-- end wrapper -->
</div>
<script src="/javascript/bundle.js"></script>
