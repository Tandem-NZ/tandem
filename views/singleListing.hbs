<h1 class="singleListHeading">{{userID}}'s listing</h1>
<div class="detailsContainer">
  <p id="origin">Origin: {{origin}}</p>
  <p id="destination">Destination: {{destination}}</p>
  <p id="date">Date: {{date}}</p>
</div>
<div class="description">
  <h4>Description:</h4>
  <p>{{description}}</p>
</div>
<br/>
<div class="commentContainer">
  <form action="/singleListing" class="" method="post">
    <textarea id="commentReply" name="comment" rows="8" cols="40"></textarea>
    <input type="submit" name="name" value="comment">
  </form>
</div>
<div class="requestToBook">
  <button type="button" name="requestToBook">Request a Ride</button>
</div>
